{
    "compilerOptions": {
      "target": "ESNext",               
      "module": "CommonJS",             
      "lib": ["ESNext"],                
      "strict": true,                   
      "esModuleInterop": true,          
      "skipLibCheck": true,             
      "forceConsistentCasingInFileNames": true, 
      "outDir": "./dist",               
      "rootDir": "./src"                
    },
    "include": ["src/**/*.ts","types/**/*.d.ts"],
    "exclude": ["node_modules"]
  }
  