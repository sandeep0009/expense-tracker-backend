

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}
model User {
  id          String     @id      @default(auto()) @map("_id") @db.ObjectId
  name        String
  password    String?
  email       String     @unique
  imageUrl    String?
  expenses    Expense[]
  incomes     Income[]
  otp         String?
  otpExpiry   DateTime?
  createdAt   DateTime   @default(now())
}

model Expense {
  id          String     @id      @default(auto()) @map("_id") @db.ObjectId
  title       String
  category    Category
  spentMoney  Int
  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id])
  date        DateTime   @default(now())
  createdAt   DateTime   @default(now())
  @@index([userId])
}

model Income {
  id          String     @id      @default(auto()) @map("_id") @db.ObjectId
  amount      Int
  source      Source
  userId      String     @db.ObjectId
  user        User       @relation(fields: [userId], references: [id])
  date        DateTime   @default(now())
  createdAt   DateTime   @default(now())
  @@index([userId])
}

enum Category {
  Grocery
  Shopping
  FoodAndDining
  Transportation
  Deposit
  Investment
  Miscellaneous
}

enum Source {
  Business
  Salary
  Freelancing
  Investments
  RentalIncome
  SideHustle
  Gifts
  Bonuses
  Interest
  Others
}
